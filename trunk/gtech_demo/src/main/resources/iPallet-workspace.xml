<workspace name="iPallet_Main">
	<title>${title}</title>
	<header>
		<bar justify="left" cls="iarc-main-layout-side-border">
			<spacer width="10px" />
			<image src="classpath:com.gtech.iarc.demo.style.theme.images.menu/gtech.png" />
	
			<fill />
			<menu>
				<entry id="IdOne" cls="xwt-menu-text" ctCls="classContainerOne">
					<title><@i18nText key="ipallet.menu.code" /></title>
					<icon>classpath:com.gtech.iarc.demo.style.theme.images.menu/gtech_icon_32.png</icon>
					<menuItems>
						<menuItem id="IdOne2" cls="classOne2" ctCls="classContainerOne2">
							<name><@i18nText key="ipallet.menu.code.uom" /></name>	
							<icon>classpath:com.gtech.iarc.demo.style.theme.images.menu/gtech_icon_16.png</icon>
							<description><@i18nText key="ipallet.menu.code.uom.description" /></description>
							<view ref="ipallet.view.code.uom" />
						</menuItem>
					</menuItems>
				</entry>			
			</menu>	
			<spacer width="10px" />
			<separator />
			<html cls="buildNumber">
				<content>
				<![CDATA[ <b><@i18nText key="common.text.language" /></b>: ]]>
				</content>
			</html>				
			<spacer width="5px" />
			<link url="?lang=en_UK">
				<label>EN</label>
			</link>
			<spacer width="5px" />
			<link url="?lang=zh_CN">
				<label>CN</label>
			</link>	
			<spacer width="5px" />				
		</bar>	
	</header>
	
	<footer>
		<bar id="iarc-main-footer" justify="left" cls="iarc-main-footerbar iarc-main-layout-side-border iarc-main-layout-side-border-transparent">
			<fill />
			<separator />
			<link url="javascript:frameBox('Terms', 'http://...');">
				<label><@i18nText key="footer.terms" /></label>
			</link>
			<separator />
			<link url="javascript:frameBox('Privacy Statement', 'http://..')">
				<label><@i18nText key="footer.privacy" /></label>
			</link>
            <separator />			
			<html cls="buildNumber">
				<content>
				<![CDATA[ &copy; 2011 GTech All rights reserved.]]>
				</content>
			</html>
			<fill />
		</bar>
	</footer>				
	<dashboard columns="4">
		<column></column>
		<column></column>
		<column></column>
		<column>
		<!-- 
			<dashlet>
				<view ref="ipallet.view.util.tasks" />
			</dashlet>
		-->			
		</column>
	</dashboard>
	
</workspace>