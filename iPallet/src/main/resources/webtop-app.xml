<?xml version="1.0" encoding="UTF-8" ?>
<webtop>
	<name>GTech[iArc]</name>

	<globalIncludes>
		<css>classpath:com.innovations.webtop.iconsets/silk.css</css>
		<css>classpath:com.innovations.webtop.iconsets/fugue.css</css>
		<css>classpath:com.gtech.iarc.base.css/RowEditor.css</css>
		<css>classpath:com.gtech.iarc.base.css/ExplorerView.css</css>

		<js>classpath:com.gtech.iarc.base.js.lib/RowEditor.js</js>
		<js>classpath:com.gtech.iarc.base.js.lib/ExplorerViewGrid.js</js>
		<js>classpath:com.gtech.iarc.base.js.lib/GroupingExplorerView.js</js>
		<js>classpath:com.gtech.iarc.base.js.lib/CheckColumn.js</js>		                                               
	</globalIncludes>

	<services>
		<rest springBean="UOMCodeRestService">
			<route>/uomcode</route>
			<route>/uomcode/{id}</route>
		</rest>
		<rest springBean="UOMCatRestService">
			<route>/uomcat</route>
		</rest>		
		<dwr type="spring" scriptName="RemoteStaffService">
			<property key="beanName" value="RemoteStaffService" />
			<converters>
				<converter class="com.gtech.iarc.ipallet.web.dto.StaffInfo"/>
			</converters>
		</dwr>			
		
	</services>
			
	<views>
	<!-- Biz Code windows -->
		<view id="ipallet.view.code.uom" src="com.gtech.iarc.ipallet.view.bizcode/CodeUOMService.js" jsClass="iPallet.CodeUOMService" />
		<view id="ipallet.hr.staff.browser" src="com.gtech.iarc.ipallet.view.staffmanagement/StaffBrowser.js" jsClass="iPallet.Staff.Browser" />
		<view id="ipallet.hr.staff.creation" src="com.gtech.iarc.ipallet.view.staffmanagement/StaffCreation.js" jsClass="iPallet.Staff.Creation" />
		
	<!-- Biz Util windows -->	
		<!-- 
		<view id="ipallet.view.util.tasks" src="com.gtech.iarc.ipallet.view.bizcode/CodeUOMService.js" jsClass="iPallet.CodeUOMService" />			
	 -->
	</views>
</webtop>
